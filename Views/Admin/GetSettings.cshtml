@model UdemyEgitimPlatformu.ViewModel.CompositeViewModel


@{
    ViewData["Title"] = "Ayarlar";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-5">
    <table class="table table-0">

        @if (TempData["success"] != null && TempData["success"].ToString() == "true")
        {
            <div class="alert alert-success">
                @TempData["message"]
            </div>
        }
        else if (TempData["success"] != null && TempData["success"].ToString() == "false")
        {
            <div class="alert alert-danger">
                @TempData["message"]
            </div>
        }

        <body>
       


            @foreach (var setting in Model.CategoryViewModel.Ayarlar)
            {
                switch (setting.Id)
                {
                    case 1003:
                    <tr>
                        <td>
                            <div class="form-container">
                                <h3>Site Adı</h3>
                                <span>Text Metni</span>

                                <form asp-controller="Admin" asp-action="Guncelle" method="post" class="d-flex flex-column">
                                    <input type="hidden" name="Id" value="@setting.Id">

                                    <div class="form-group">
                                        <label for="value_@setting.Id"></label>
                                        <input type="text" id="value_@setting.Id" name="value" asp-for="@setting.Value" class="form-control" required>
                                    </div>

                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </form>
                            </div>

                        </td>
                    </tr>

                        break;

                    case 1004:
                    <tr>
                        <td>
                            <div class="form-container">
                                <h3>Slogan Metni</h3>
                                <span>SEO Kriteri açısından uzunluğa dikkat ederek slogan metninizi belirleyiniz.</span>

                                <form asp-controller="Admin" asp-action="Guncelle" method="post" class="d-flex flex-column">
                                    <input type="hidden" name="Id" value="@setting.Id">

                                    <div class="form-group">
                                        <input type="text" id="value_@setting.Id" name="value" asp-for="@setting.Value" class="form-control" required>
                                    </div>

                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </form>
                            </div>

                        </td>
                    </tr>
                        break;

                    case 1:
                    <tr>
                        <td>
                            <div class="form-container">
                                <h3>Logo</h3>
                                <span>(wwwroot/ Altında istediğiniz klasöre görseli ekleyip buradan linkini çağırabilirsiniz.)</span>

                                <form asp-controller="Admin" asp-action="Guncelle" method="post" class="d-flex flex-column">
                                    <input type="hidden" name="Id" value="@setting.Id">

                                    <div class="form-group">
                                        <input type="text" id="value_@setting.Id" name="value" asp-for="@setting.Value" class="form-control" required>
                                    </div>

                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </form>
                            </div>

                        </td>
                    </tr>
                        break;
                    case 1005:
                    <tr>
                        <td>
                            <div class="form-container">
                                <h3>Favicon</h3>
                                <span>(wwwroot/ Altında istediğiniz klasöre görseli ekleyip buradan linkini çağırabilirsiniz.)</span>

                                <form asp-controller="Admin" asp-action="Guncelle" method="post" class="d-flex flex-column">
                                    <input type="hidden" name="Id" value="@setting.Id">

                                    <div class="form-group">
                                        <input type="text" id="value_@setting.Id" name="value" asp-for="@setting.Value" class="form-control" required>
                                    </div>

                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </form>
                            </div>

                        </td>
                    </tr>
                        break;
                   
                 
                       
                    default:


                        break;

                }
            }
         
      
        </body>
    </table>
</div>



