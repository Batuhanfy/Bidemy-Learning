@model UdemyEgitimPlatformu.ViewModel.CompositeViewModel

@{
    ViewData["Title"] = "Loglar";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container">
    <div class="row">
        <h1>Loglar</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Message</th>
                    <th>StackTrace</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Loglar)
                {
                    <tr>
                        <td>@log.Message</td>
                        <td>
                            @if (log.StackTrace.Length > 100)
                            {
                                <span>@log.StackTrace.Substring(0, 100)...</span>
                                <button type="button" class="btn btn-link" data-toggle="modal" data-target="#stackTraceModal_@log.Id">Devamını oku</button>

                                <!-- Modal -->
                                <div class="modal fade" id="stackTraceModal_@log.Id" tabindex="-1" role="dialog" aria-labelledby="stackTraceModalLabel_@log.Id" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="stackTraceModalLabel_@log.Id">StackTrace</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <pre>@log.StackTrace</pre>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <span>@log.StackTrace</span>
                            }
                        </td>
                        <td>@log.Timestamp</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Modal Scripts -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa8U5w6TZoKNs9H3NpHl7wGdk" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>

    </div>
</div>


