                <div class="position-sticky pt-3">
                    <ul class="nav flex-column left-menus">
                    

                        <li class="nav-item ">
                            <a class="nav-link active text-white" aria-current="page" href="#">
                                <img src="~/icons/layout/admin/dashboard.svg" alt="Dashboard" width="20" height="30" class="mr-2" />
                                Dashboard
                            </a>
                        </li>
                     
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Admin" asp-action="GetSettings">
                                <img src="~/icons/layout/admin/settings.svg" alt="Genel Ayarlar " width="20" height="30" class="mr-2"/>

