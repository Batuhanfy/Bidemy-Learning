        <ul class="navbar-nav me-auto text-white">


            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">
                    <img src="~/icons/layout/admin/world.svg" height="15px" />
                </a>
                
            </li>


            <div class="dropdown-menu-head">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">
                    <img class="m-1" src="~/icons/layout/admin/home.svg" height="15px" />
                    @siteName | @siteDescription
                </a>


            </li>
            <ul class="dropdown-menu dropdown-menu-dark">
                <li><a asp-controller="Home" asp-action="Index" class="dropdown-item" >Siteyi Görüntüle</a></li>
            </ul>
          </div>


